<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".LoginActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:src="@drawable/personas_balcones"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/mail_img"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/mail"
                android:layout_below="@id/login_back"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="20sp"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_back"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@id/mail_img"
                android:background="@drawable/login_mail"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="20sp"
                android:textSize="20sp"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:padding="12sp"
                android:fontFamily="@font/freedoka"/>

            <ImageView
                android:id="@+id/pass_img"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/password"
                android:layout_below="@id/mail_img"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_email"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@id/pass_img"
                android:background="@drawable/login_pp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="20sp"
                android:textSize="20sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12sp"
                android:fontFamily="@font/freedoka"/>

            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_pass"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:gravity="right"
                android:layout_marginTop="5sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/freedoka"
                android:text="Forget Password ?"
                android:textSize="15sp" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60sp"
                android:layout_marginLeft="70sp"
                android:layout_marginRight="70sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/login_pass"
                android:text="LOGIN"
                android:fontFamily="@font/freedoka"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/buttons" />

            <TextView
                android:id="@+id/need_new_account_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_btn"
                android:gravity="center"
                android:fontFamily="@font/freedoka"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15sp"
                android:textColor="@color/colorAccentBlue"
                android:text="Need new Account ?" />

            <TextView
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/need_new_account_link"
                android:text="or"
                android:gravity="center"
                android:fontFamily="@font/freedoka"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/login_using"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/or"
                android:text="Login using your"
                android:textColor="@color/colorAccentBlue"
                android:gravity="center"
                android:fontFamily="@font/freedoka"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"/>

            <Button
                android:id="@+id/phone_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="70sp"
                android:layout_marginRight="70sp"
                android:layout_marginBottom="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/login_using"
                android:text="Phone"
                android:fontFamily="@font/freedoka"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/buttons" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>